{
  "openapi": "3.0.1",
  "info": {
    "title": "Tracking API",
    "description": "Asynchronous package tracking API with support for multiple carriers. Submit tracking requests and poll for results using the returned job ID. Results are cached for 5 minutes.",
    "version": "v1"
  },
  "paths": {
    "/HealthCheck": {
      "get": {
        "tags": [
          "HealthCheck"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/Tracking": {
      "post": {
        "tags": [
          "Tracking"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TrackingRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/TrackingRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/TrackingRequest"
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Accepted",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/TrackingJobResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TrackingJobResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/TrackingJobResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/Tracking/{jobId}": {
      "get": {
        "tags": [
          "Tracking"
        ],
        "parameters": [
          {
            "name": "jobId",
            "in": "path",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/TrackingStatusResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TrackingStatusResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/TrackingStatusResponse"
                }
              }
            }
          },
          "202": {
            "description": "Accepted",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/TrackingStatusResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TrackingStatusResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/TrackingStatusResponse"
                }
              }
            }
          },
          "410": {
            "description": "Client Error",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Server Error",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/TrackingStatusResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TrackingStatusResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/TrackingStatusResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CarrierCode": {
        "enum": [
          "UPS",
          "FedEx"
        ],
        "type": "string"
      },
      "Events": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "location": {
            "type": "string",
            "nullable": true
          },
          "country": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "TrackingInfo": {
        "type": "object",
        "properties": {
          "trackingNumber": {
            "type": "string",
            "nullable": true
          },
          "carrier": {
            "$ref": "#/components/schemas/CarrierCode"
          },
          "deliveryDate": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "status": {
            "$ref": "#/components/schemas/TrackingStatus"
          },
          "eventList": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Events"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "TrackingJobResponse": {
        "type": "object",
        "properties": {
          "jobId": {
            "type": "string",
            "format": "uuid"
          },
          "status": {
            "$ref": "#/components/schemas/TrackingJobStatus"
          },
          "statusUrl": {
            "type": "string",
            "nullable": true
          },
          "expiresAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "TrackingJobStatus": {
        "enum": [
          "Pending",
          "Processing",
          "Completed",
          "Failed"
        ],
        "type": "string"
      },
      "TrackingRequest": {
        "type": "object",
        "properties": {
          "trackingNumber": {
            "type": "string",
            "nullable": true
          },
          "carrierCode": {
            "$ref": "#/components/schemas/CarrierCode"
          }
        },
        "additionalProperties": false
      },
      "TrackingStatus": {
        "enum": [
          "InTransit",
          "Delivered",
          "Exception",
          "InfoReceived",
          "OutForDelivery",
          "Unknown"
        ],
        "type": "string"
      },
      "TrackingStatusResponse": {
        "type": "object",
        "properties": {
          "jobId": {
            "type": "string",
            "format": "uuid"
          },
          "status": {
            "$ref": "#/components/schemas/TrackingJobStatus"
          },
          "result": {
            "$ref": "#/components/schemas/TrackingInfo"
          },
          "errorMessage": {
            "type": "string",
            "nullable": true
          },
          "completedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "ApiKey": {
        "type": "apiKey",
        "description": "API Key needed to access the endpoints. X-API-KEY: {API Key}",
        "name": "x-api-key",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "ApiKey": [ ]
    }
  ]
}